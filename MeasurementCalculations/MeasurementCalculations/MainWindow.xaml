<Window x:Class="MeasurementCalculations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeasurementCalculations"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TextBlock Text="Hello Postnova!"/>
        <Button Content="Please select data file:"
                    Width="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="20"
                    Command="{Binding LoadFileCommand}"/>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">

                <TextBlock Text="Raw data from file:"
                   Margin="0,30,0,0"
                   FontWeight="Bold"/>

                <ListView ItemsSource="{Binding MeasurementDataList}"
                  BorderBrush="Transparent"
                  Margin="0,10,0,0"
                  Width="300"
                  Height="500">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="X: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding X}" Width="80"/>
                                <TextBlock Text="Y: " FontWeight="Bold" Margin="20,0,0,0"/>
                                <TextBlock Text="{Binding Y}" Width="80"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Standard deviation y-values: "
                           Margin="30,30,0,0"
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding StandardDeviationYValues}"
                           Margin="30,30,0,0"/>
                <TextBlock Text="Mean y-values: "
                           Margin="30,30,0,0"
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding MeanYValues}"
                           Margin="30,30,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                    <TextBlock Text="First derivatives (dy/dx): "
                           Margin="30,30,0,0"
                           FontWeight="Bold"/>
                <ListView ItemsSource="{Binding DerivativeDataList}" 
                          HorizontalAlignment="Left"
                          BorderBrush="Transparent"
                          Margin="30,10,0,0"
                          Width="200"
                          Height="500">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FirstDerivative}" Width="200"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
