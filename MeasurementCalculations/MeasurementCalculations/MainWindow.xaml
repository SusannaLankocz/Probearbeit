<Window x:Class="MeasurementCalculations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeasurementCalculations"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200">
    <Grid>
        <TextBlock Text="Hello Postnova!"/>
        <Button Content="Please select data file 'data.txt':"
                    Width="200"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="50"
                    Command="{Binding LoadFileCommand}"/>
        <StackPanel Orientation="Horizontal"
                    Margin="0,50,0,0">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">

                <TextBlock Text="1A) Raw data from file:"
                   Margin="0,30,0,0"
                   FontWeight="Bold"/>

                <ListView ItemsSource="{Binding MeasurementDataList}"
                          BorderBrush="Transparent"
                          Margin="0,10,0,0"
                          Width="250"
                          Height="400">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="X: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding X}" Width="80"/>
                                <TextBlock Text="Y: " FontWeight="Bold" Margin="20,0,0,0"/>
                                <TextBlock Text="{Binding Y}" Width="80"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="1B) Standard deviation y-values: "
                               Margin="30,30,0,0"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding StandardDeviationYValues}"
                               Margin="10,30,0,0"/>
                    <TextBlock Text="1B) Mean y-values: "
                               Margin="30,30,0,0"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding MeanYValues}"
                               Margin="10,30,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="1C) First derivatives (dy/dx): "
                               Margin="30,30,0,0"
                               FontWeight="Bold"/>
                        <ListView ItemsSource="{Binding FirstDerivativeDataList}" 
                              HorizontalAlignment="Left"
                              BorderBrush="Transparent"
                              Margin="30,10,0,0"
                              Width="200"
                              Height="400">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Derivative}" Width="200"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="1C) Second derivatives: "
                               Margin="30,30,0,0"
                               FontWeight="Bold"/>
                        <ListView ItemsSource="{Binding SecondDerivativeDataList}" 
                              HorizontalAlignment="Left"
                              BorderBrush="Transparent"
                              Margin="30,10,0,0"
                              Width="200"
                              Height="400">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Derivative}" Width="200"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="1D) Rounded significant figures (y-values): "
                                   Margin="30,30,0,0"
                                   Width="200"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Left"
                                   FontWeight="Bold"/>
                        <ListView ItemsSource="{Binding RoundedSignificantFiguresYValues}" 
                                  HorizontalAlignment="Left"
                                  BorderBrush="Transparent"
                                  Margin="30,10,0,0"
                                  Width="200"
                                  Height="400">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding .}" Width="200"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
